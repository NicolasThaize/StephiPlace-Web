{% extends "layoutnoheader.twig" %}

{% block title %}
    <title>Se connecter - StephiPlaceImmo</title>
{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="css/signin.css">
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
{% endblock %}

{% block content %}
<main>
    <div class="main">
        <div class="main_left_part">
            <h1>Connecte toi !</h1>
            <p>Connecte toi pour retrouver tes favoris et bénéficier de toutes les fonctionnalitées du site.</p>
        </div>
        <div class="main_right_part">
            <div class="form_signin">
                <div class="form_logo">
                    <a href="index.php?p=acceuil">
                        <img src="images/logo.png" alt="logo stephiplace">
                    </a>
                </div>
                <form method="post" action="php/modify.php">
                    <div class="form_pseudo">
                        <label>{{ modif }} : </label>
                        <input type="text" placeholder="{{ modif }}" name="coPseudo">
                    </div>
                    <div class="form_password">
                        <label>Mot de passe actuel: </label>
                        <input type="password" placeholder="Mot de passe" name="coMdp">
                    </div>

                    <div class="form_submit">
                        <button type="submit" name="mod{{ modif }}">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
{% endblock %}